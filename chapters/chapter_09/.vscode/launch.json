{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--require",
                "reflect-metadata",
                "--require",
                "ts-node/register",
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/test/**/*.test.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "sourceMaps": true
        }
    ]
}
